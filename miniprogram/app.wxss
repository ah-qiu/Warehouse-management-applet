/** app.wxss **/
page {
  background-color: #f9fafb; /* bg-gray-50 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  color: #1f2937; /* text-gray-800 */
  --blue-600: #2563eb;
  --indigo-700: #4338ca;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 20px;
}

/* Utilities mimics */
.bg-gray-50 { background-color: #f9fafb; }
.bg-white { background-color: #ffffff; }
.text-gray-800 { color: #1f2937; }
.text-gray-500 { color: #6b7280; }
.text-gray-400 { color: #9ca3af; }
.text-blue-600 { color: #2563eb; }
.text-red-500 { color: #ef4444; }

.font-bold { font-weight: 700; }
.font-semibold { font-weight: 600; }
.font-medium { font-weight: 500; }
.text-xs { font-size: 24rpx; }
.text-sm { font-size: 28rpx; }
.text-lg { font-size: 36rpx; }
.text-xl { font-size: 40rpx; }
.text-2xl { font-size: 48rpx; }
.text-3xl { font-size: 60rpx; }

.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 24rpx; }
.rounded-2xl { border-radius: 32rpx; }
.rounded-full { border-radius: 9999px; }

.shadow-sm { box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); }
.shadow-lg { box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); }

.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-between { justify-content: space-between; }
.justify-center { justify-content: center; }
.gap-2 { gap: 16rpx; }
.gap-3 { gap: 24rpx; }
.gap-4 { gap: 32rpx; }

.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.py-3 { padding-top: 24rpx; padding-bottom: 24rpx; }
.px-4 { padding-left: 32rpx; padding-right: 32rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mt-2 { margin-top: 16rpx; }
.mt-4 { margin-top: 32rpx; }

.border { border-width: 1px; border-style: solid; }
.border-gray-100 { border-color: #f3f4f6; }
.border-b { border-bottom-width: 1px; border-bottom-style: solid; }

/* Custom Components */
.card {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  border: 1px solid #f3f4f6;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.btn-primary {
  background-color: #2563eb;
  color: white;
  border-radius: 24rpx;
  font-weight: bold;
  box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.2);
}

.btn-primary:active {
  transform: scale(0.98);
}

/* Utilities Extras */
.grid { display: grid; }
.grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
.text-center { text-align: center; }

.bg-purple-100 { background-color: #f3e8ff; }
.text-purple-600 { color: #9333ea; }
.bg-orange-100 { background-color: #ffedd5; }
.text-orange-600 { color: #ea580c; }
.text-green-600 { color: #16a34a; }

/* Segmented Control Component */
.segmented-control {
  display: flex;
  background-color: #e2e8f0; /* slate-200 */
  border-radius: 16rpx;
  padding: 8rpx;
  position: relative;
  overflow: hidden;
}

.segmented-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #64748b; /* slate-500 */
  border-radius: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 2;
}

.segmented-item.active {
  background-color: #ffffff;
  color: #2563eb; /* blue-600 */
  font-weight: 700;
  box-shadow: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.1), 0 2rpx 4rpx -1rpx rgba(0, 0, 0, 0.06);
}